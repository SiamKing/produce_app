<div class="jumbotron jumbotron-juice">
  <div class="img"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1 align="center">Juices</h1>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12 center-block">
    <% @juices.each do |juice| %>
      <div class="col-xs-6 col-md-6">
        <h3 align="center"><%= link_to juice.name, juice_path(juice) %></h3>
        <% juice.produce.each do |prod| %>
          <p align="center"><%= prod.juice_produce.first.quantity %> <%= prod.name %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-xs-4 col-md-4">
    <%= link_to "Create a New Juice", new_juice_path, class: "btn btn-outline-primary" %>
  </div>
</div>
