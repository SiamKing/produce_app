<%= render partial: 'application/jumbotron', locals: {jumbo: 'jumbotron-juice', header: @juice.name} %>

<div class="row">
  <h2 align="center">Ingredients</h2>
  <div class="col-xs-6 col-md-6 col-md-offset-3">
    <% @produce.each do |prod| %>
      <div class="col-xs-4">
      <h3 align="center"><%= prod.juice_produce.first.quantity %> <%= prod.name %></h3>
      <div class="produce-index-img text-center">
        <%= link_to image_tag(prod.image.thumb.url), produce_path(prod) %>
      </div>
    </div>
    <% end %>
  </div>
</div>
<h3 align="center"><%= link_to "Edit Juice", edit_juice_path(@juice) %></h3>
