<div class="jumbotron jumbotron-juice">
  <div class="img"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1 align="center"><%= @juice.name %></h1>
      </div>
    </div>
  </div>
</div>
<hr>
<div class="row">
  <h2 align="center">Ingredients</h2>
  <div class="col-xs-6 col-md-6 col-md-offset-3">
    <% @produce.each do |prod| %>
      <div class="col-xs-4">
      <h3 align="center"><%= prod.juice_produce.first.quantity %> <%= prod.name %></h3>
      <div class="img">
        <%= link_to image_tag(prod.image.thumb.url), produce_path(prod) %>
      </div>
    </div>
    <% end %>
  </div>
</div>
