<div class="row">
  <div class="container-fluid">
    <div class="row">
      <h1 align="center"><%= @produce.name %></h1>
      <div class="text-center col-md-4 col-md-offset-2">
        <%= image_tag @produce.image.large.url %>
        <br><br><br><br>
      </div>
      <div class="col-md-4 info">
        <h4><%= @produce.content %>
          Shelf life is usually about <%= @produce.expires_in %> days.</h4>
          <br></br>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
          <div class="col-xs-3">
            <%= button_to "Add to fridge", user_produce_index_path(@produce), class: "btn btn-default" %>
          </div>
          <div class="col-xs-6">
            <h4 align="center"><%= link_to "Edit", edit_produce_path %></h4>
          </div>
          <div class="col-xs-3">
            <h4 align="right"><%= link_to "Juices with #{@produce.name}", produce_juices_path(@produce) %></h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
