<%= render partial: "application/jumbotron", locals: {jumbo: 'jumbotron-user', header: "Here's what's in #{current_user.name}'s fridge"} %>
<div class="row">
  <div class="col-xs-6 col-md-6">
    <h1 align='center'>Fruit</h1>
    <%= render partial: "users/user_produce", locals: {produce: @fruit} %>
  </div>
  <div class="col-xs-6 col-md-6">
    <h1 align='center'>Veggies</h1>
    <%= render partial: "users/user_produce", locals: {produce: @veggies} %>
  </div>
</div>
<br></br></br>
<div class="row">
  <div class="col-xs-6">
    <h3 align="center"><%= link_to "Add more produce", produce_index_path, class: 'btn btn-outline-primary ' %><h3>
  </div>
  <div class="col-xs-6">
    <h3 align="center"><%= link_to "See your faves", user_user_produce_index_path(@user, @p = 0), class: 'btn btn-outline-primary ' %><h3>
  </div>
</div>
