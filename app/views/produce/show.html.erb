<div class="produceBody">
  <div class="row">
    <div class="container-fluid">
      <div class="row">
        <h1 align="center" class="produceName"><%= @produce.name %></h1>
        <div class="text-center col-md-4 col-md-offset-2 produceImage" >
          <%= image_tag @produce.image.large.url %>
          <br><br><br><br>
        </div>
        <div class="col-md-4 info">
          <h4 class="produceContent"><%= @produce.content %></h4>
          <h4 id="expiresIn">Shelf life is usually about <%= @produce.expires_in %> days.</h4>
          <br></br>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
          <div class="col-xs-3">
            <form class="addFridge" action="/user_produce.<%= @produce.id %>" method="post">
              <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
              <input class="btn btn-default" type="submit" value="Add to fridge"/>
            </form>

          </div>
          <div class="col-xs-6">
            <h4 align="center"><a class="editProduce" href="/produce/<%= @produce.id %>/edit">Edit</a></h4>
          </div>
          <div class="col-xs-3">
            <h4 align="right" ><a class="juiceLink" href="/produce/<%= @produce.id %>/juices">Juices with <%= @produce.name %></a></h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</br>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="col-md-4 col-md-offset-4" align="center">
      <a href="#" class="js-previous" data-id="<%= @produce.id %>">Previous Item</a>
      ------  <a href="#" class="js-next" data-id="<%= @produce.id %>" last-id="<%= @last_produce_id %>">Next Item</a>
    </div>
  </div>
</div>
</div>

<script id="nextPrevProduce-template" type="text/x-handlebars-template">
  <div class="produceBody">
    <div class="row">
      <div class="container-fluid">
        <div class="row">
          <h1 align="center" class="produceName">{{name}}</h1>
          <div class="text-center col-md-4 col-md-offset-2 produceImage" >
            <img src="{{image}}" alt="" />
            <br><br><br><br>
          </div>
          <div class="col-md-4 info">
            <h4 class="produceContent">{{content}}</h4>
            <h4 id="expiresIn">Shelf life is usually about {{shelfLife}} days.</h4>
            <br></br>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-8 col-xs-offset-2">
            <div class="col-xs-3">
              <form class="addFridge" action="/user_produce.{{id}}" method="post">
                <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                <input class="btn btn-default" type="submit" value="Add to fridge"/>
              </form>

            </div>
            <div class="col-xs-6">
              <h4 align="center"><a class="editProduce" href="/produce/{{id}}/edit">Edit</a></h4>
            </div>
            <div class="col-xs-3">
              <h4 align="right" ><a class="juiceLink" href="/produce/{{id}}/juices">Juices with {{name}}</a></h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </br>
  <div class="row nextPrevLinks">
    <div class="col-md-6 col-md-offset-3">
      <div class="col-md-4 col-md-offset-4" align="center">
        <a href="#" class="js-previous" data-id="{{id}}">Previous Item</a>
        ------  <a href="#" class="js-next" data-id="{{id}}" last-id="<%= @last_produce_id %>">Next Item</a>
      </div>
    </div>
  </div>
</div>
</script>

<script type="text/javascript">
$(function() {
  previous();
  next();
});
</script>
